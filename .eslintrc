{
    "root": true,
    "settings": {
        "ecmascript": 6
    },
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "globals": {
        "document": false,
        "escape": false,
        "navigator": false,
        "unescape": false,
        "describe": true,
        "beforeAll": true,
        "beforeEach": true,
        "test": true,
        "expect": true,
        "jest": true
    },
    "plugins": [],
    "extends": "eslint:recommended",
    "parser":"babel-eslint",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "comma-dangle": 0,
        "no-console": 1,
        "indent": [
            2,
            2
        ],
        "linebreak-style": 0,
        "quotes": [
            2,
            "single"
        ],
        "semi": [
            2,
            "always"
        ]
    }
}